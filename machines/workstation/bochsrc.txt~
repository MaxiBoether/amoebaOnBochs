###############################################################
# bochsrc.txt file for DLX Linux disk image.
###############################################################

cpu: count=1, ips=1000000

# how much memory the emulated machine will have
megs: 32 

# filename of ROM images
romimage: file=$BXSHARE/BIOS-bochs-legacy
vgaromimage: file=$BXSHARE/VGABIOS-elpin-2.40

# floppy images
floppya: 1_44=kernels.img, status=inserted
floppyb: 1_44=amoeba.0.img, status=inserted

# hard disk - this is a workstation so no disk
#ata0: enabled=1, ioaddr1=0x1f0, ioaddr2=0x3f0, irq=14
#ata0-master: type=disk, path="mainhd.img", mode=flat, cylinders=1015, heads=16, spt=63

# network - has adjusted ioaddr, irq and ethdev!
ne2k: ioaddr=0x280, irq=3, mac=b0:c4:31:00:00:00, ethmod=linux, ethdev=lo

# choose the boot disk.
boot: floppy
#boot: disk

# default config interface is textconfig.
#config_interface: textconfig
#config_interface: wx

# other choices: x win32 sdl wx carbon amigaos beos macintosh nogui rfb term svga
display_library: sdl

# where do we send log messages?
log: log.txt

# disable the mouse, since amoeba is currently text only
mouse: enabled=0

# enable key mapping, using US layout as default.
#
# NOTE: In Bochs 1.4, keyboard mapping is only 100% implemented on X windows.
# However, the key mapping tables are used in the paste function, so 
# in the DLX Linux example I'm enabling keyboard_mapping so that paste 
# will work.  Cut&Paste is currently implemented on win32 and X windows only.

#keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/x11-pc-de.map
#keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/x11-pc-fr.map
keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/sdl-pc-us.map
#keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/x11-pc-es.map
